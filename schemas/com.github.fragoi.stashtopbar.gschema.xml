<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE schemalist SYSTEM "https://gitlab.gnome.org/GNOME/glib/-/raw/HEAD/gio/gschema.dtd">
<schemalist>

  <enum id="com.github.fragoi.stashtopbar.Edge">
    <value nick="none" value="-2" />
    <value nick="auto" value="-1" />
    <value nick="top" value="0" />
    <value nick="right" value="1" />
    <value nick="bottom" value="2" />
    <value nick="left" value="3" />
  </enum>

  <enum id="com.github.fragoi.stashtopbar.SlidePrevention">
    <value nick="none" value="0" />
    <value nick="soft" value="1" />
    <value nick="medium" value="2" />
    <value nick="hard" value="3" />
  </enum>

  <schema
    id="org.gnome.shell.extensions.com-github-fragoi-stashtopbar"
    path="/org/gnome/shell/extensions/com-github-fragoi-stashtopbar/">

    <key name="barrier-edge" enum="com.github.fragoi.stashtopbar.Edge">
      <default>'top'</default>
      <summary>Barrier Edge</summary>
      <description>
        Edge of monitor where barrier is placed.
      </description>
    </key>
    <key name="barrier-pressure-threshold" type="i">
      <default>100</default>
      <summary>Barrier Pressure Threshold</summary>
      <description>
        Pressure in pixel across barrier required to trigger.
      </description>
    </key>
    <key name="barrier-pressure-timeout" type="i">
      <default>100</default>
      <summary>Barrier Pressure Timeout</summary>
      <description>
        Amount of time in milliseconds during wich pressure is accumulated.
      </description>
    </key>
    <key name="barrier-slide-prevention"
      enum="com.github.fragoi.stashtopbar.SlidePrevention">
      <default>'medium'</default>
      <summary>Barrier Slide Prevention</summary>
      <description>
        Determine algorithm used to calculate pressure when movement is not directly
        across barrier.
        
        Harder the level, the more the movement needs to be directly across barrier.
      </description>
    </key>
  </schema>

</schemalist>
